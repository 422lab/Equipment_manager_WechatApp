{
  "pages": [
    "pages/index/main",
    "pages/instrument/main",
    "pages/waited/main",
    "pages/my/main"
   ],

  "window": {
    "backgroundTextStyle": "light",
    "navigationBarBackgroundColor": "#fff",
    "navigationBarTitleText": "WeChat",
    "navigationBarTextStyle": "black"
  },

    "permission":{
      "scope.userLocation":{
          "desc":"你的位置信息将用于天气与位置接口的效果显示"}
    },
    
  "tabBar": {
    "color": "#999",
    "backgroundColor": "#fafafa",
    "selectedColor": "#3d7ef9",
    "borderStyle": "white",

    "list": [
      {
      "text": "首页",
      "pagePath": "pages/index/main",
      "iconPath": "static/tabs/home.png",
      "selectedIconPath": "static/tabs/home-active.png"
    }, 
    {
      "text": "设备",
      "pagePath": "pages/instrument/main",
      "iconPath": "static/tabs/instrument.png",
      "selectedIconPath": "static/tabs/instrument-active.png"
    },
    {
      "text": "列表",
      "pagePath": "pages/waited/main",
      "iconPath": "static/tabs/waitedinstrument.png",
      "selectedIconPath": "static/tabs/waitedinstrument-active.png"
    },
    {
      "text": "我的",
      "pagePath": "pages/my/main",
      "iconPath": "static/tabs/orders.png",
      "selectedIconPath": "static/tabs/orders-active.png"
    }
  ],
    "position": "bottom"
  },

  "usingComponents":{
    "van-button": "vant-weapp/dist/button/index",
    "van-toast": "vant-weapp/dist/toast/index",
    "van-dialog": "vant-weapp/dist/dialog/index",
    "van-icon": "vant-weapp/dist/icon/index",
    "van-field": "vant-weapp/dist/field/index",
    "van-tab": "vant-weapp/dist/tab/index",
    "van-tabs": "vant-weapp/dist/tabs/index",
    "van-collapse": "vant-weapp/dist/collapse/index",
    "van-collapse-item": "vant-weapp/dist/collapse-item/index",
    "van-card": "vant-weapp/dist/card/index"
    
  }

}
